---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl } from '../i18n/ui';

export interface Props {
  title: string;
  description: string;
  permalink: string;
  current?: string;
  locale?: string;
}
const { title, description, permalink, current, locale } = Astro.props;
const lang = locale || getLangFromUrl(Astro.url);
---
<html lang={lang}>
<head>
  <BaseHead title={title} description={description} permalink={permalink} />
  {/* hreflang tags for SEO */}
  <link rel="alternate" hreflang="de" href={permalink.replace('/tr/', '/')} />
  <link rel="alternate" hreflang="tr" href={permalink.includes('/tr/') ? permalink : permalink.replace(Astro.site?.href || '', `${Astro.site?.href}tr/`)} />
  <link rel="alternate" hreflang="x-default" href={permalink.replace('/tr/', '/')} />
</head>
<body>
  <div class="layout">
    <Header current={current} locale={lang} />

    <main>
      <slot />
    </main>

    <Footer />
  </div>
</body>
</html>

<style>
  .layout {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    min-height: 100vh;
  }

  main {
    flex: 1;
    position: relative;
    margin: 0 auto;
    max-width: 1400px;
    padding: 1em 2em;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-direction: column;
  }
</style>
