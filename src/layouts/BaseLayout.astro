---
import BaseHead from '../components/BaseHead.astro';
import StructuredData from '../components/StructuredData.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl } from '../i18n/ui';

export interface Props {
  title: string;
  description: string;
  permalink: string;
  current?: string;
  locale?: string;
  ogType?: 'website' | 'article';
  ogImage?: string;
  publishedTime?: string;
  structuredDataType?: 'website' | 'article' | 'service';
  serviceName?: string;
  serviceDescription?: string;
  servicePrice?: string;
  alternateUrl?: string;  // Allow passing explicit alternate URL
}

const { 
  title, 
  description, 
  permalink, 
  current,
  locale,
  ogType,
  ogImage,
  publishedTime,
  structuredDataType = 'website',
  serviceName,
  serviceDescription,
  servicePrice,
  alternateUrl
} = Astro.props;
const lang = (locale || getLangFromUrl(Astro.url)) as 'de' | 'tr';
---
<html lang={lang}>
<head>
  <BaseHead 
    title={title} 
    description={description} 
    permalink={permalink} 
    lang={lang}
    ogType={ogType}
    ogImage={ogImage}
    publishedTime={publishedTime}
    alternateUrl={alternateUrl}
  />
  <StructuredData 
    type={structuredDataType}
    lang={lang}
    pageTitle={title}
    pageDescription={description}
    pageUrl={permalink}
    articlePublishDate={publishedTime}
    serviceName={serviceName}
    serviceDescription={serviceDescription}
    servicePrice={servicePrice}
  />
</head>
<body>
  <div class="layout">
    <Header current={current} locale={lang} />

    <main>
      <slot />
    </main>

    <Footer />
  </div>
</body>
</html>

<style>
  .layout {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    min-height: 100vh;
  }

  main {
    flex: 1;
    position: relative;
    margin: 0 auto;
    max-width: 1400px;
    padding: 1em 2em;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-direction: column;
  }
</style>
