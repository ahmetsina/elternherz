---
import Logo from './Logo.astro'
import Nav from './Nav.astro'
import LanguageSwitcher from './LanguageSwitcher.astro'

const { current = '', locale = 'de' } = Astro.props;
---

<style>
  header {
    display: flex;
    align-items: center;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
    box-sizing: border-box;
  }

  @media screen and (max-width: 768px) {
    header {
      padding: 1.5em 1em;
    }
  }

  @media screen and (max-width: 520px) {
    header {
      padding: 1em 0.75em;
    }
  }
</style>

<header>
  <Logo />
  <Nav current={current} locale={locale} />
  <LanguageSwitcher />
</header>
