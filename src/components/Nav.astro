---
import ThemeToggleButton from './ThemeToggleButton.svelte';
import { useTranslations } from '../i18n/ui';

const { current = '', locale = 'de' } = Astro.props;
const t = useTranslations(locale);

// Define navigation links based on locale
const navLinks = locale === 'de' ? [
  { href: '/', label: t('nav.home'), key: '' },
  { href: '/about', label: t('nav.about'), key: 'about' },
  { href: '/blog', label: t('nav.blog'), key: 'blog' },
  { href: '/kontakt', label: t('nav.contact'), key: 'kontakt', isBooking: true },
] : [
  { href: '/tr', label: t('nav.home'), key: '' },
  { href: '/tr/hakkinda', label: t('nav.about'), key: 'about' },
  { href: '/tr/blog', label: t('nav.blog'), key: 'blog' },
  { href: '/tr/iletisim', label: t('nav.contact'), key: 'iletisim', isBooking: true },
];
---

<style>
  nav {
    align-items: center;
    display: flex;
    flex: 1;
    font-family: var(--font-family-sans);
    font-weight: 700;
    justify-content: flex-end;
    text-transform: uppercase;
  }

  a {
    color: inherit;
    text-decoration: none;
    padding: 10px 5px;
    display: block;
    position: relative;
    margin-left: 20px;
    min-width: 70px;
    text-align: center;
  }

  a:not(.selected) {
    opacity: 0.7;
  }

  a::before {
    content: '';
    position: absolute;
    transition: transform .3s ease;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2px;
    background: var(--text-secondary);
    transform: scaleX(0);
  }

  a:hover::before,
  .selected::before {
    transform: scaleX(1);
  }

  .selected::before {
    background: var(--primary-color);
  }

  .theme-toggle-container {
    width: 75px;
  }

  .booking-link {
    background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
    color: white !important;
    border-radius: 6px;
    opacity: 1 !important;
    transition: all 0.3s ease;
  }

  .booking-link:hover {
    background: linear-gradient(135deg, #2980b9 0%, #21618c 100%);
    transform: translateY(-2px);
  }

  .booking-link::before {
    display: none;
  }

  @media screen and (max-width: 520px) {
    .theme-toggle-container {
      margin-right: 1em;
    }
  }

</style>

<nav>
  {navLinks.map(link => (
    <a 
      class={`${current === link.key ? "selected" : ""} ${link.isBooking ? "booking-link" : ""}`}
      href={link.href}
    >
      {link.label}
    </a>
  ))}
  <div class="theme-toggle-container">
    <ThemeToggleButton client:load />
  </div>
</nav>
