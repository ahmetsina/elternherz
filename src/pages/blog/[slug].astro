---
import { getCollection, render } from 'astro:content'
import readingTime from 'reading-time'
import BaseLayout from '../../layouts/BaseLayout.astro';
import Bio from '../../components/Bio.astro';

export async function getStaticPaths() {
	const posts = await getCollection('posts')
  return posts.map(p => ({
    params: { slug: p.data.slug },
    props: { post: p },
  }));
}

const { post } = Astro.props
const { title, slug, description, publishDate } = post.data;
const readingTimeEstimate = readingTime(post.body).text
const permalink = `${Astro.site?.href || 'https://elternherz.de/'}blog/${slug}`;
const { Content } = await render(post)
---

<BaseLayout 
  title={title} 
  description={description} 
  permalink={permalink} 
  current="blog"
  lang="de"
  ogType="article"
  publishedTime={new Date(publishDate).toISOString()}
>
  <header>
    <p>{publishDate} ~ {readingTimeEstimate}</p>
    <h1>{title}</h1>
    <hr />
  </header>
  <div class="container">
    <article class="content">
      <Content />
    </article>
    <hr />
    <Bio />
  </div>
</BaseLayout>

<style>
  header {
    text-align: center;
  }

  header h1 {
    margin-bottom: 0.7em;
  }

  header p {
    color: var(--text-secondary);
    text-transform: uppercase;
    font-family: var(--font-family-sans);
    font-weight: 600;
  }

  header hr {
    min-width: 100px;
    width: 30%;
  }

  /* Optimize images in blog content */
  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5em 0;
  }
</style>

<script>
  // Add lazy loading attribute to images after first one
  document.addEventListener('DOMContentLoaded', () => {
    const content = document.querySelector('.content');
    if (content) {
      const images = content.querySelectorAll('img');
      images.forEach((img, index) => {
        // First image loads eagerly (hero), rest are lazy
        if (index > 0) {
          img.setAttribute('loading', 'lazy');
        }
      });
    }
  });
</script>
