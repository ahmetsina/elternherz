---
import BaseLayout from '../layouts/BaseLayout.astro';
import BookingCTA from '../components/BookingCTA.astro';

const title = 'ElternHerz - Professionelle Elternberatung | Deutsch & Türkisch';
const description = 'Professionelle Elternberatung in Deutsch und Türkisch. Unterstützung bei Erziehungsfragen, Entwicklung und Familienleben. Kostenlose Erstberatung verfügbar.';
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-copy">
      <h1>Willkommen bei ElternHerz</h1>
      <p class="subtitle">Professionelle Elternberatung in Deutsch und Türkisch</p>
      <p>
        Unterstützung bei Erziehungsfragen, Entwicklung und Familienleben. 
        Vereinbaren Sie jetzt Ihr kostenloses Erstgespräch.
      </p>
      <div class="cta-container">
        <BookingCTA 
          eventType="erstgespraech" 
          lang="de" 
          variant="primary" 
          size="large"
          trackingLabel="homepage-hero-cta"
        />
        <BookingCTA 
          text="Alle Beratungsangebote" 
          href="/kontakt" 
          variant="secondary" 
          size="large"
          trackingLabel="homepage-hero-services"
        />
      </div>
    </div>

    <div class="hero-image-container">
      <picture>
        <source srcset="/assets/home-illustration.webp" media="(min-width: 600px)">
        <img class="hero-image" alt="Eltern mit Kind - Familienberatung" src="/assets/home-illustration-small.webp" width="550" height="466">
      </picture>
      <p class="caption">
        Illustration by
        <a href="https://icons8.com/illustrations/author/5c07e68d82bcbc0092519bb6" target="_blank" rel="noopener">Icons 8</a>
        from
        <a href="https://icons8.com/illustrations" target="_blank" rel="noopener">Ouch!</a>
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
    color: var(--text-main);
  }

  .subtitle {
    font-size: 1.3em;
    color: var(--primary-color);
    font-weight: 600;
    margin-bottom: 1em;
  }

  .home-copy p {
    font-size: 1.2em;
    line-height: 1.6;
    margin-bottom: 1em;
  }

  .cta-container {
    margin-top: 2em;
    display: flex;
    gap: 1em;
    flex-wrap: wrap;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: .8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    margin-bottom: 1em;
  }

  @media (max-width: 1200px) {
    .home-copy p {
      font-size: 1.1em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }

    .cta-container {
      justify-content: center;
    }
  }
</style>
